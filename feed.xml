---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss xmlns:atom="http://www.w3.org/2005/Atom" 
    xmlns:content="http://purl.org/rss/1.0/modules/content/" 
    xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" 
    xmlns:googleplay="http://www.google.com/schemas/play-podcasts/1.0" 
    xmlns:media="http://www.rssboard.org/media-rss" version="2.0">
    <channel>
        <title>The Leadership Book Review</title>
        <link>https://leadership-book-review.github.io/podcast/</link>
        <language>en-us</language>
        <atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
        <copyright>Chris Alexander</copyright>
        <itunes:subtitle>Book reviews in the area of leadership and management</itunes:subtitle>
        <itunes:author>Chris Alexander</itunes:author>
        <itunes:summary>Hear about new leadership and management books, or discover new classics.</itunes:summary>
        <itunes:keywords>leadership, management, book, books, review, book review, book reviews</itunes:keywords>
        <description>Hear about new leadership and management books, or discover new classics.</description>
        <itunes:block>yes</itunes:block>
        <itunes:owner>
            <itunes:name>Chris Alexander</itunes:name>
            <itunes:email>lbr-podcast@chris-alexander.co.uk</itunes:email>
        </itunes:owner>
        <itunes:image href="https://leadership-book-review.github.io/podcast/logo-square.png" />
        <itunes:category text="Business">
            <itunes:category text="Management"/>
        </itunes:category>
        <itunes:category text="Arts">
            <itunes:category text="Books"/>
        </itunes:category>
        <itunes:category text="Business">
            <itunes:category text="Entrepreneurship"/>
        </itunes:category>
	{% for post in site.posts limit:300 %}
        <item>
            <title>Episode {{ post.slug | xml_escape }}: {{post.title | xml_escape }}</title>
            <itunes:title>{{ post.title | xml_escape }}</itunes:title>
            <itunes:author>{{ post.author | xml_escape }}</itunes:author>
            <itunes:subtitle>{{ post.summary | xml_escape }}</itunes:subtitle>
            <itunes:summary><![CDATA[{{ post.summary | cdata_escape }}]]></itunes:summary>
            <description><![CDATA[{{ post.summary | cdata_escape }}]]></description>

            {% if post.has_image %}<itunes:image href="https://leadership-book-review.github.io/podcast/episodes/{{ post.slug }}.jpg" />{% endif %}
            <enclosure url="{{ site.url }}/episodes/ep{{ post.slug }}.mp3" length="{% if post.length %}{{ post.length }}{% else %}{% filesize %}./episodes/ep{{ post.slug }}.mp3{% endfilesize %}{% endif %}" type="audio/mpeg" />
            <itunes:duration>{% if post.duration %}{{ post.duration }}{% else %}{% audioduration %}./episodes/ep{{ post.slug }}.mp3{% endaudioduration %}{% endif %}</itunes:duration>
            <itunes:season>1</itunes:season>
            <itunes:episode>{{ post.slug | xml_escape }}</itunes:episode>
            <itunes:episodeType>full</itunes:episodeType>

            <guid isPermaLink="false">{{ site.url }}/episodes/ep{{ post.slug }}.mp3</guid>
            <pubDate>{{ post.date | date: "%a, %d %b %Y %T %z" }}</pubDate>
            <itunes:explicit>{% if post.explicit %}yes{% else %}no{% endif %}</itunes:explicit>
        </item>
	{% endfor %}
    </channel>
</rss>